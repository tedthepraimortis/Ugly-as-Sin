enum UaS_Debug_Flags {
	DBG_Hunger = 1,
	DBG_Scarcity = 2,
	DBG_Debris = 4,
	DBG_Sling = 8,
	DBG_Frag = 16,
	DBG_Med = 32,
	DBG_Allies = 64,
	DBG_AI = 128,
	DBG_Jamming = 256,
	DBG_Looting = 512,
	DBG_Stealth = 1024,
	DBG_Searching = 2048,
	DBG_Intents = 4096,
};

extend class UaS {
	static play void LogDebug(int module, string message, actor recip = null) {
		if (!DebugEnabled(module)) { return; }
		if (recip && recip is "PlayerPawn") { recip.A_Log(message, true); }
		else { HDCore.log('Ugly as Sin', LOGGING_DEBUG, message); }
	}

	static play bool DebugEnabled(int module) {
		return (UaS_Debug & module);
	}
}
